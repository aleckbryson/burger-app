<h1>Welcome to McDowell's!</h1>

<div class="row">
  <div class="col-md-6">
    <h2>
      Burgers Better Than McDonald's!
    </h2>
    <ul>
      {{#each burgers}}
      {{#unless hungry}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-6">
    <h2>Eaten Burgers!</h2>
    <ul>
      {{#each burgers}}
      {{#if hungry}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


<div class="row">
  <div class="container">
    <div class="col-md-12">
      <form class="create-form">
        <h2>Add A Burger</h2>
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="hungry">Hungry?</label><br>
          <input type="radio" name="hungry" value="1" checked> Hungry!<br>
          <input type="radio" name="hungry" value="0"> Being Made!
        </div>

        <div class="vertical-center">
          <button type="submit" class="btn btn-primary btn-lg">Add Burger</button>
        </div>
      </form>
    </div>
  </div>
</div>